.content-wrapper
  .page-header.row
    .col-md-7
      %h3.page-title
        %span.page-title-icon.bg-primary.text-white.mr-2
          %i.fa.fa-file
        Products
    .col-md-5.mt-2.mt-md-0.text-right
      %a.btn.btn-sm.btn-primary{ href: new_company_product_path, data: { toggle: 'tooltip', placement: 'left '}, title: 'New Product' }
        %i.fa.fa-plus

  .row
    .col-12.grid-margin
      .card
        .card-body
          - if @products.present?
            .table-responsive
              %table.table.table-hover
                %thead
                  %tr.table-primary
                    %th Name
                    %th Description
                    %th Price
                    %th.text-right{ width: '10%','data-orderable': 'false' } Actions
                %tbody
                  - @products.each do |product|
                    %tr
                      %td= product.name
                      %td= product.description
                      %td= product.price
                      %td.text-right
                        = link_to raw("<i class='fa fa-eye'></i>"), company_product_path(product.id), { class: 'btn-sm btn-warning px-2 py-1', 'data-toggle': 'tooltip', title: 'Show' }
                        = link_to raw("<i class='fa fa-pencil-square-o'></i>"), edit_company_product_path(product.id), { class: 'btn-sm btn-warning px-2 py-1', 'data-toggle': 'tooltip', title: 'Edit' }
                        = link_to raw("<i class='fa fa-trash-o'></i>"), company_product_path(product.id), { class: 'btn-sm btn-danger px-2 py-1', 'data-toggle': 'tooltip', 'data-confirm': 'Are you sure?', title: 'Delete', method: :delete }
          - else
            %center
              %h6
                No Product Found.
