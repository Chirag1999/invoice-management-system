.content-wrapper
  .page-header.row
    .col-md-7
      %h3.page-title
        %span.page-title-icon.bg-primary.text-white.mr-2
          %i.fa.fa-file
        Customers
    - if can_access?(:customers, :new)
      .col-md-5.mt-2.mt-md-0.text-right
        %a.btn.btn-sm.btn-primary{ href: new_company_customer_path, data: { toggle: 'tooltip', placement: 'left '},
        title: 'New Customer' }
          %i.fa.fa-plus

  .row
    .col-12.grid-margin
      .card
        .card-body
          - if @customers.present?
            .table-responsive
              %table.table.table-hover
                %thead
                  %tr.table-primary
                    %th Name
                    %th Email
                    %th Phone
                    %th Address
                    %th.text-right{ width: '10%','data-orderable': 'false' } Actions
                %tbody
                  - @customers.each do |customer|
                    %tr
                      %td= customer.name
                      %td= customer.email
                      %td= customer.phone
                      %td= customer.address
                      %td.text-right
                        = link_to raw("<i class='fa fa-pencil-square-o'></i>"), edit_company_customer_path(customer.id), { class: 'btn-sm btn-warning px-2 py-1', 'data-toggle': 'tooltip', title: 'Edit' }
                        = link_to raw("<i class='fa fa-trash-o'></i>"), company_customer_path(customer.id),
                        { class: 'btn-sm btn-danger px-2 py-1', 'data-toggle': 'tooltip', 'data-confirm': 'Are you sure?', title: 'Delete', method: :delete }
          - else
            %center
              %h6
                No Customer Found.
